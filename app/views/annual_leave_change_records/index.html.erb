<p id="notice"><%= notice %></p>

<div class="col-1">
    <div class="panel panel-default templatemo-content-widget white-bg no-padding templatemo-overflow-hidden">
        <i class="fa fa-times"></i>

        <div class="panel-heading templatemo-position-relative">
            <h2 class="text-uppercase">年假变更记录</h2>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>姓名</th>
                    <th>员工号</th>
                    <th>类型</th>
                    <th>日期</th>
                    <th>天数</th>
                    <th>使用哪一年年假</th>
                </tr>
                </thead>

                <tbody>
                <% @records.each do |record| %>
                    <tr>
                        <td>
                            <%= record.employee.name  %>
                            <%= link_to ' (delete)', annual_leave_change_record_path(record), method: :delete, data: { confirm: '确认删除吗?' } %>
                        </td>
                        <td><%= record.employee.staffno %></td>
                        <td>
                            <%= record.kind == AnnualLeaveChangeRecord::KIND_EXTRA ? "额外" : "休假" %>
                        </td>
                        <td><%= record.when.strftime("%Y-%m-%d") %></td>
                        <td><%= record.number %></td>
                        <td><%= record.which_year %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
