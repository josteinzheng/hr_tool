<%= form_for(@employee) do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "姓名" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label '工号' %><br>
    <%= f.text_field :staffno %>
  </div>
  <div class="field">
    <%= f.label '工龄' %><br>
    <%= f.number_field :seniority %>
  </div>
  <div class="field">
    <%= f.label '入职日期' %><br>
      <% if @employee.hiredate.nil? %>
          <%= f.text_field :hiredate %>
      <% else %>
          <%= f.text_field :hiredate, @employee.hiredate.strftime("%Y-%m-%d") %>
      <% end %>
  </div>
    <div class="field">
        <%= f.label '去年剩余' %><br>
        <%= f.text_field :last_year_left %>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
