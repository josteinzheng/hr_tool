<p id="notice"><%= notice %></p>

<div class="col-1"><%= link_to ' 添加新员工', new_employee_url  %>
    <div class="panel panel-default templatemo-content-widget white-bg no-padding templatemo-overflow-hidden">
        <i class="fa fa-times"></i>

        <div class="panel-heading templatemo-position-relative">
            <h2 class="text-uppercase">Listing Employees</h2>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>姓名</th>
                    <th>员工号</th>
                    <th>工龄</th>
                    <th>入职日期</th>
                    <% if @includeLastYear %>
                        <th>去年剩余</th>
                    <% end %>
                    <th>法定</th>
                    <th>额外</th>
                    <th>奖励</th>
                    <th>已休</th>
                    <th>剩余</th>
                </tr>
                </thead>

                <tbody>
                <% @employees.each do |employee| %>
                    <tr>
                        <td><%= employee.name  %></td>
                        <td><%= employee.staffno %></td>
                        <td><%= employee.seniority %></td>
                        <td><%= employee.hiredate.strftime("%Y-%m-%d") %></td>
                        <% if @includeLastYear %>
                            <td><%= employee.last_year_left %></td>
                        <% end %>
                        <td><%= employee.statutory %></td>
                        <td><%= employee.extra %>
                            <%= link_to ' +', new_annual_leave_change_record_url(:employee_id => employee.id)  %></td>
                        <td><%= employee.bonus %></td>
                        <td><%= employee.used %>
                            <%= link_to ' +', new_annual_leave_change_record_url(:employee_id => employee.id)  %></td>
                        <td><%= employee.remain %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
