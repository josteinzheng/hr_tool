<h1>Listing Employees</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Staffno</th>
      <th>Start work date</th>
      <th>Hiredate</th>
      <th>Statutory</th>
      <th>Extra</th>
      <th>Bonus</th>
      <th>Used</th>
      <th>Remain</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.staffno %></td>
        <td><%= employee.start_work_date %></td>
        <td><%= employee.hiredate %></td>
        <td><%= employee.statutory %></td>
        <td><%= employee.extra %></td>
        <td><%= employee.bonus %></td>
        <td><%= employee.used %></td>
        <td><%= employee.remain %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

