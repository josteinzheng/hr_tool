<!-- Search box -->
<form class="templatemo-search-form" role="search">
    <div class="input-group">
        <button type="submit" class="fa fa-search"></button>
        <input type="text" class="form-control" placeholder="请输入完整员工号" name="employee_number" id="staffno_search">
    </div>
</form>
<table class="table table-striped table-bordered">
    <tbody>
    <% if !@employee.nil? %>
        <tr>
            <td>姓名</td>
            <td><%= @employee.name %></td>
        </tr>
        <tr>
            <td>员工号</td>
            <td><%= @employee.staffno %></td>
        </tr>
        <tr>
            <td>基准年假</td>
            <td><%= @employee.getStatutoryBase %></td>
        </tr>
        <tr>
            <td>入职日期</td>
            <td><%= @employee.hiredate.strftime("%Y-%m-%d") %></td>
        </tr>
        <tr>
            <td>2015剩余年假</td>
            <td><%= @employee.last_year_left %></td>
        </tr>
        <tr>
            <td>2016法定年假</td>
            <td><%= @employee.statutory %></td>
        </tr>
        <tr>
            <td>2016奖励年假</td>
            <td><%= @employee.extra %>
        </tr>
        <tr>
            <td>2016福利年假</td>
            <td><%= @employee.bonus %></td>
        </tr>
        <tr>
            <td>2016已休年假</td>
            <td><%= @employee.used %>
        </tr>
        <tr>
            <td>剩余年假</td>
            <td><%= @employee.remain %></td>
        </tr>
    <% elsif @empty_param %>
    <% else %>
        <p>
            无该员工信息
        </p>
    <% end %>
    </tbody>
</table>
